<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:background="@drawable/sign_in_background">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:background="@drawable/linearlayout_bg"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <EditText
                android:id="@+id/etMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_top_left"
                android:layout_weight="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#cccccc"
                android:drawableLeft="@drawable/email"/>
            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_top_right"
                android:inputType="textPersonName"
                android:layout_weight="1"
                android:hint="User Name"
                android:textColorHint="#bbbbbb"
                android:drawableLeft="@drawable/user"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_left"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:padding="2dp"
                android:inputType="phone"
                android:hint="@string/phone"
                android:textColorHint="#bbbbbb"
                android:drawableLeft="@drawable/phone"/>
            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bottom_right"
                android:layout_marginTop="-2dp"
                android:layout_weight="1"
                android:hint="@string/password"
                android:textColorHint="#cccccc"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/password"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnSingIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:text="Sign In"
            style="@style/btnStyleTaxi"

            />
    </LinearLayout>
    </RelativeLayout>